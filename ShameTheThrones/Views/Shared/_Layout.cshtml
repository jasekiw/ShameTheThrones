@using System.Diagnostics.Eventing.Reader
@using System.Web.Configuration
@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="@Url.Content("~/Content/fav.ico")" type="image/x-icon" sizes="96x96">
    <title>@ViewBag.Title</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    @Styles.Render("~/Content/css")
    <meta name="author" content="Jason Gallavin">
    @RenderSection("Styles", false/*required*/)
</head>
<body class=" @ViewBag.TitleClass ">
 
@Html.Partial("~/Views/Shared/_Navbar.cshtml")
<div class="body-wrapper">

    <div class="container body-content">
        @RenderBody()
    </div>
    <div class="container footer">
        <div class="row">
            <div class="col-xs-12 centered">
                <footer>
                    <p>&copy; @DateTime.Now.Year - Shame The Thrones</p>
                </footer>
            </div>
        </div>
    </div>
</div>



@Scripts.Render("~/bundles/before")
<script type="text/javascript">
    fullPageSpinner();
</script>

@RenderSection("ScriptsBefore", false /*required*/)
<script src="~/Scripts/js/thirdparty/modernizr-2.6.2.js"></script>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC_N_J5ihjjP4YJ-sKBMGselkuhwi0Ltzg"></script>
@{
    CompilationSection compilationSection = (CompilationSection) System.Configuration.ConfigurationManager.GetSection(@"system.web/compilation");
    bool isDebugEnabled = compilationSection.Debug;
}

@if (isDebugEnabled)
{
    <script type="text/javascript" data-main="@Url.Content("~/Scripts/typescript/shamethethrones/Main.js")" src="@Url.Content("~/Scripts/js/thirdparty/require.js")"></script>
}
else
{
    <script type="text/javascript" data-main="@Url.Content("~/Scripts/typescript/dist/shamethethrones/Main.js")" src="@Url.Content("~/Scripts/js/thirdparty/require.js")"></script>
}

@RenderSection("Scripts", false /*required*/)
</body>
</html>