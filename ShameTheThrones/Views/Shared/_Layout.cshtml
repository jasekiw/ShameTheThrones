@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="@Url.Content("~/Content/fav.ico")" type="image/x-icon" sizes="96x96">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
</head>
<body>

    @Html.Partial("~/Views/Shared/_Navbar.cshtml")

<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - ShameTheThrones</p>
    </footer>
</div>
    <script type="text/javascript">
        var waitUntilLoaded = false;
    </script>
    @Scripts.Render("~/bundles/before");
    @RenderSection("ScriptsBefore", false/*required*/)
    <script src="~/Scripts/js/thirdparty/modernizr-2.6.2.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    
    @Scripts.Render("~/bundles/mainsite")
    <script type="text/javascript">
        var mainApp = new shamethethrones.Main(waitUntilLoaded);
        var baseProjectDir = "@Url.Content("~")";
        shamethethrones.Main.setBaseDir(baseProjectDir);
    </script>
    
    @RenderSection("Scripts", false/*required*/)
</body>
</html>