@using System.Web.Optimization
@model ShameTheThrones.Models.RestroomModel

@{
    ViewBag.Title = "AddBathroom";
}

@*
    Comments and TODO:
    - Validate form and make sure all fields are filled in before submission.
    - Capture data from the rating button group or pssiibly impliment a better method.
    - Make textbox the width of the form.
    - Add photo upload functonality. 

    - Is layout intuitive?
*@

<div class="panel panel-default">
    <div class="panel-heading text-center">
        <h2>Add New Bathroom</h2>
    </div>

    @using (Html.BeginForm("New", "Restroom"))
    {
        @Html.HiddenFor(b => b.coordX)
        @Html.HiddenFor(b => b.coordY)
        <div class="panel-body">

            <div class="well" style="margin-bottom: 75px">
                <h3 class="text-center">Location</h3>
                <a id="fillByLocation" href="javascript:void(0);" type="button" class="btn btn-default rate-button">Fill in by location</a>
                <div class="row">
                    <div class="col-xs-6 text-center">
                        @Html.Label("Address")
                        @Html.TextBoxFor(b => b.Address, new {@class = "form-control", @style = "margin:auto; margin-bottom: 20px"})
                    </div>

                    <div class="col-xs-6 text-center">
                        @Html.Label("City")
                        @Html.TextBoxFor(b => b.City, new {@class = "form-control", @style = "margin:auto; margin-bottom: 20px"})
                    </div>

                </div>

                <div class="row">
                    <div class="col-xs-6 text-center">
                        @Html.Label("State")
                        @Html.TextBoxFor(b => b.State, new {@class = "form-control", @style = "margin:auto; margin-bottom: 20px"})

                    </div>

                    <div class="col-xs-6 text-center">
                        @Html.Label("Zip")
                        @Html.TextBoxFor(b => b.ZipCode, new {@class = "form-control", @style = "margin:auto; margin-bottom: 20px"})

                    </div>

                </div>
            </div>
            <div class="map_container">
                <div class="map"></div>
            </div>
            <div class="well">
                <div class="row">
                    <div class="col-xs-6">

                        @{
                            //gender list array
                            SelectList genderList = new SelectList(new List<SelectListItem>
                        {
                            new SelectListItem {Text = "Male", Value = "0"},
                            new SelectListItem {Text = "Female", Value = "1"},
                            new SelectListItem {Text = "Both", Value = "2"}
                        }, "Value", "Text");

                        }
                        @Html.DropDownListFor(x => x.Gender, genderList, "Select Gender For Restroom",
                        new { @class = "form-control", @style = "margin:auto; margin-bottom: 20px" })

                    </div>




                </div>

                <div class="row" style="margin-top: 50px">
                    <div class="col-xs-12 text-center">
                        @Html.Label("Description")
                        @Html.TextAreaFor(b => b.Description, new
                       {
                           @class = "form-control",
                           @style = "margin: auto; margin-bottom: 20px; width: 100%", //How to make comment  box span the width of the form?
                           @rows = "4"

                       })
                    </div>

                </div>

            </div>
            

            <div class="well text-left">
                <button class="btn btn-default text-center" type="button">Add Photo(s)</button>

            </div>

            <div class="text-center">
                <button class="btn btn-primary btn-lg text-center btn-block" type="submit">Add Restroom</button>
            </div>

        </div>
    }
</div>
@section ScriptsBefore
{
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC_N_J5ihjjP4YJ-sKBMGselkuhwi0Ltzg"></script>
    @Scripts.Render("~/bundles/googleMapsExtensions")
}
@section Scripts
{
    <script type="text/javascript">
        require(['shamethethrones/Main'], function (shamethethrones) {
            var mainApp = new shamethethrones.Main(waitUntilLoaded);
            shamethethrones.Main.setBaseDir(baseProjectDir);
            mainApp.constructAddRestroomPage();
        });
    </script>
}
