@using System.Web.Optimization
@model ShameTheThrones.Models.RestroomModel

@{
    ViewBag.Title = "AddBathroom";
    ViewBag.TitleClass = "restroom-add";
}

@*
    Comments and TODO:
    - Validate form and make sure all fields are filled in before submission.
    - Capture data from the rating button group or pssiibly impliment a better method.
    - Make textbox the width of the form.
    - Add photo upload functonality. 

    - Is layout intuitive?
*@

<div class="panel panel-default">
    <div class="panel-heading text-center">
        <h2>Add New Bathroom</h2>
    </div>

    @using (Html.BeginForm("New", "Restroom", FormMethod.Post, new { id = "NewRestroom"}))
    {
        @Html.HiddenFor(b => b.coordX, new { @required = "" })
        @Html.HiddenFor(b => b.coordY, new { @required = "" })
        <div class="panel-body">

            <div class="well" style="margin-bottom: 75px">
                <h3 class="text-center">Location</h3>
                <div class="row">
                    <div class="col-xs-12 flexible-btn-container centered">
                        
                        <a id="fillByLocation" href="javascript:void(0);" type="button" class="btn btn-default rate-button">Fill in by location</a>
                    </div>
                </div>
               
                <div class="row">
                    <div class="col-md-6 col-xs-12 text-center">
                        @Html.Label("Address")
                        @Html.TextBoxFor(b => b.Address, new {@class = "form-control", @style = "margin:auto; margin-bottom: 20px", @required = ""})
                    </div>

                    <div class="col-md-6 col-xs-12 text-center">
                        @Html.Label("City")
                        @Html.TextBoxFor(b => b.City, new {@class = "form-control", @style = "margin:auto; margin-bottom: 20px", @required = ""})
                    </div>

                </div>

                <div class="row">
                    <div class="col-md-6 col-xs-12 text-center">
                        @Html.Label("State")
                        @Html.TextBoxFor(b => b.State, new {@class = "form-control", @style = "margin:auto; margin-bottom: 20px", @required = ""})

                    </div>

                    <div class="col-md-6 col-xs-12 text-center">
                        @Html.Label("Zip")
                        @Html.TextBoxFor(b => b.ZipCode, new {@class = "form-control", @style = "margin:auto; margin-bottom: 20px", @required = ""})

                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 centered">
                    <p>Please make sure the marker is at the right location on the map. This will be the location that the restroom will be displayed</p>
                </div>
            </div>
            <div class="map_container">
                <div class="map"></div>
            </div>
            <div class="well">
                <div class="row">
                    <div class="col-md-6 col-xs-12">

                        @{
                            //gender list array
                            SelectList genderList = new SelectList(new List<SelectListItem>
                        {
                            new SelectListItem {Text = "Male", Value = "0"},
                            new SelectListItem {Text = "Female", Value = "1"},
                            new SelectListItem {Text = "Both", Value = "2"}
                        }, "Value", "Text");

                        }
                        @Html.DropDownListFor(x => x.Gender, genderList, "Select Gender For Restroom",
                        new { @class = "form-control", @style = "margin:auto; margin-bottom: 20px", @required = "" })

                    </div>




                </div>

                <div class="row" style="margin-top: 50px">
                    <div class="col-xs-12 text-center">
                        @Html.Label("Describe the location of the restroom")
                        @Html.TextAreaFor(b => b.Description, new
                   {
                       @class = "form-control",
                       @style = "margin: auto; margin-bottom: 20px; width: 100%", //How to make comment  box span the width of the form?
                       @rows = "4",
                       @required = ""

                   })
                    </div>

                </div>

            </div>
            

         
            <div class="text-center">
                <button class="btn btn-primary btn-lg text-center btn-block" type="submit">Add Restroom</button>
            </div>
        </div>
    }
</div>
