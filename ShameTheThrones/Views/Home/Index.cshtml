@using System.Web.Optimization

@{
    ViewBag.Title = "Shame The Thrones!";
    ViewBag.NavbarTab = "Home";
    ViewBag.TitleClass = "home";
}
<div class="row spaced">
    <div class="col-xs-12" id="homeGreeting">
        Welcome to ShameTheThrones, to start rating public restrooms please log in.
    </div>
</div>
<div class="row spaced homeSearch">
    <div class="col-xs-12">
        <div class="centered">
            <h1>
                <a id="bathroomsAroundMe" href="javascript:void(0);" type="button" class="btn btn-default map-button">Click here to find bathrooms around you</a>
            </h1>
            <h2>Or...</h2>
        </div>
        <div class="centered">
            <h1>
                <a href="@Url.Action("Add", "Restroom")" type="button" class="btn btn-default rate-button">Don't see what you are looking for?  Add a bathroom</a>
            </h1>
            <h2>Or...</h2>
        </div>
        <div class="input-group">
            <input type="text" class="form-control zip-code-search" placeholder="start typing an address or a zip code... ">
            <span class="input-group-btn">
                <button class="btn btn-default" onclick="javascript:mainApp.homePage.searchZip()" type="button">Go!</button>
            </span>
        </div><!-- /input-group -->
    </div><!-- /.col-lg-6 -->
</div>
<div class="row">
    <div class="col-xs-12">
        <ul class="list-group searchResults"></ul>
    </div>
</div>

<div class="map_container">
    <div class="legend">
        <div class="legend__0"><span>Not Rated</span></div>
        <div class="legend__1"><span>0 - 1</span></div>
        <div class="legend__2"><span>1 - 2</span></div>
        <div class="legend__3"><span>2 - 3</span></div>
        <div class="legend__4"><span>3 - 4</span></div>
        <div class="legend__5"><span>4 - 5</span></div>
    </div>
    <div class="map"></div>
</div>

