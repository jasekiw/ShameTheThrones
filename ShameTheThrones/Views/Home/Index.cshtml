@using System.Web.Optimization

@{
    ViewBag.Title = "Shame The Thrones!";
    ViewBag.NavbarTab = "Home";
}
<div class="row spaced">
    <div class="col-xs-12" id="homeGreeting">
        <h1 class="text-center">Welcome to ShameTheThrones</h1>
        <h3 class="text-center">Please <a href="@Url.Action("LogIn", "User")">Login</a> to rate a restroom </h3>
        
    </div>

    <div class="col-xs-12">
        <h3 class="text-center">Here are three options to find restrooms</h3>
    </div>
</div>
<div class="row spaced homeSearch">
    <div class="col-md-4 vertical-align-container">
        <div class="centered">
            <h1>
                <a id="bathroomsAroundMe" href="javascript:void(0);" type="button" class="btn btn-default map-button">Restrooms near me</a>
            </h1>
        </div>
    </div><!-- /.col-md-4 -->
    <div class="col-md-4 vertical-align-container">
        <div class="centered">
            <h1>
                <a href="@Url.Action("Add", "Restroom")" type="button" class="btn btn-default rate-button">Add a bathroom</a>
            </h1>
        </div>
    </div><!-- /.col-lg-6 -->

    <div class="col-md-4 vertical-align-container ">
        <h1>
            <div class="input-group">
                <input type="text" class="form-control zip-code-search" placeholder="Search for a restroom">
                <span class="input-group-btn">
                    <button class="btn btn-default form-btn" onclick="javascript:mainApp.homePage.searchZip()" type="button">Search</button>
                </span>
            </div><!-- /input-group -->
        </h1>
    </div><!-- /.col-lg-6 -->
</div>
<div class="row">
    <div class="col-xs-12">
        <ul class="list-group searchResults"></ul>
    </div>
</div>

<div class="map_container">
    <div class="legend">
        <div class="legend__0"><span>Not Rated</span></div>
        <div class="legend__1"><span>0 - 1</span></div>
        <div class="legend__2"><span>1 - 2</span></div>
        <div class="legend__3"><span>2 - 3</span></div>
        <div class="legend__4"><span>3 - 4</span></div>
        <div class="legend__5"><span>4 - 5</span></div>
    </div>
    <div class="map"></div>
</div>

@section ScriptsBefore
{
    <script type="text/javascript">
        var waitUntilLoaded = true;
        fullPageSpinner();
        var seconds = new Date().getTime() / 1000;
        var stopTimer = function() {
            return (new Date().getTime() / 1000) - seconds;
        }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC_N_J5ihjjP4YJ-sKBMGselkuhwi0Ltzg"></script>
    @Scripts.Render("~/bundles/googleMapsExtensions")
    
}
@section Scripts
                    {
    <script type="text/javascript">
        require(['shamethethrones/Main'], function (shamethethrones) {
            var mainApp = new shamethethrones.Main(waitUntilLoaded);
            shamethethrones.Main.setBaseDir(baseProjectDir);
            mainApp.constructHomePage();
        });
        
    </script>
}