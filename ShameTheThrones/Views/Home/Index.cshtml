@using System.Web.Optimization

@{
    ViewBag.Title = "Shame The Thrones!";
    ViewBag.NavbarTab = "Home";
}
<div class="row spaced">
    <div class="col-xs-12" id="homeGreeting">
        Welcome to ShameTheThrones, to start rating public restrooms please log in.
    </div>
</div>
<div class="row spaced homeSearch">
    <div class="col-xs-12">
        <div class="centered">
            <h1>
                <a href="javascript:mainApp.homePage.getLocation()" type="button" class="btn btn-default rate-button">Click here to find bathrooms around you</a>
            </h1>
            <h2>Or...</h2>
        </div>
        <div class="centered">
            <h1>
                <a href="@Url.Action("Add", "Restroom")" type="button" class="btn btn-default rate-button">Don't see what you are looking for?  Add a bathroom</a>
            </h1>
            <h2>Or...</h2>
        </div>
        <div class="input-group">
            <input type="text" class="form-control" placeholder="start typing a zip code...">
            <span class="input-group-btn">
                <button class="btn btn-default" type="button">Go!</button>
            </span>
        </div><!-- /input-group -->
    </div><!-- /.col-lg-6 -->
</div>
<div class="row">
    <div class="col-xs-12">
        <ul class="list-group searchResults"></ul>
    </div>
</div>
<div class="legend">
    <div class="legend__0"><span>Not Rated</span></div>
    <div class="legend__1"><span>0 - 1</span></div>
    <div class="legend__2"><span>1 - 2</span></div>
    <div class="legend__3"><span>2 - 3</span></div>
    <div class="legend__4"><span>3 - 4</span></div>
    <div class="legend__5"><span>4 - 5</span></div>
</div>
<div id="map"></div>
<div id="demo"></div>
@section ScriptsBefore
{
    <script type="text/javascript">
        var waitUntilLoaded = true;
        fullPageSpinner();
        var seconds = new Date().getTime() / 1000;
        var stopTimer = function () {
            return (new Date().getTime() / 1000) - seconds;
        }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC_N_J5ihjjP4YJ-sKBMGselkuhwi0Ltzg"></script>
}
@section Scripts
                    {
    <script type="text/javascript">
        mainApp.constructHomePage();
    </script>
}